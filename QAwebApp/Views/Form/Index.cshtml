@model QAwebApp.ViewModels.FormViewModel



<h2>QA Questionarie</h2>
<h3>Hello @Model.AppUser</h3>



@Html.ActionLink("Create Questionarie", "Create") |
@Html.ActionLink("Admin List", "AdminList")


<table class="table">
    <tr>
        <td>
            Division
        </td>
        <td>
            Country
        </td>
        <td>
            Unit Responsible
        </td>
        <td>
            Email Status
        </td>
    </tr>
    @foreach (var item in Model.Forms)
    {

        <tr>
            <td>
                @Html.DisplayFor(m => item.Division)
            </td>
            <td>
                @Html.DisplayFor(m => item.Country)
            </td>
            <td>
                @Html.DisplayFor(m => item.UnitResponsible.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.EmailSent)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Assign Responsible", "Assign", new { id = item.Id }) |
                @Html.ActionLink("Send Email", "SendEmail", new { id = item.Id }, new { onclick = "return confirm('Are you sure?');" })

            </td>
        </tr>
    }
</table>
